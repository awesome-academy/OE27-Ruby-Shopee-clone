<tr class="nested-fields">
  <td>
    <%= f.file_field :image, accept: Settings.shop.file_type.gsub(" ", ", ") %>
    <%= f.hidden_field :image_cache, value: f.object.image_cache %>
  </td>
  <td class="preview-images">
    <% if @product.images.any? %>
      <% @product.images.each do |img| %>
        <div class="image-detail">
          <%= image_tag img.image.url %>
        </div>
      <% end %>
    <% end %>
  </td>
  <td class="del-img">
    <%= f.check_box :_destroy %>
    <%= link_to_remove_association f, class: "btn-sm btn-danger" do %>
      <i class="fas fa-minus-circle"></i>
    <% end %>
  </td>
</tr>
