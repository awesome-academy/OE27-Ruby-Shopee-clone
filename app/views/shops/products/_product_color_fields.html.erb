<tr class="nested-fields">
  <td>
    <%= f.collection_select :color_id, load_color, :id, :color, {}, {class: "form-control"} %>
  </td>
  <td>
    <%= f.number_field :quantity, class: "form-control" %>
  </td>
  <td class="del-color">
    <%= f.check_box :_destroy %>
    <%= link_to_remove_association t("shop.product.create.remove"), f %>
  </td>
</tr>
