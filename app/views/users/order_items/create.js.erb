var quantityy = parseFloat($('.input-number-show').val());
var max_quantity = parseFloat($('.input-number-show').attr('max'));

$('.shopping-cart').html("<%= j render 'shop' %>")
$('.input-number-show').prop('max', max_quantity - quantityy);
$('.badge').text($('.item-sub').length);

if((max_quantity - quantityy) == 0){
  $(':input[type="submit"]').prop('disabled', true);
  $('#quantity_avai').text(I18n.t('order.out_of_stock'));
}else{
  $(':input[type="submit"]').prop('disabled', false);
  $('#quantity_avai').text(max_quantity - quantityy);
}

toastr.success(I18n.t('order.susscess'));
