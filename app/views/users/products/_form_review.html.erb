<%= form_for Review.new, remote: true do |f| %>
  <div class="form-row">
    <div class="col-md-12">
      <label for="review"><%= t "product.review" %></label>
      <%= f.text_field :content, class: "form-control", id: "review", required: true  %>
    </div>
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= f.hidden_field :user_id, value: current_user.id if current_user %>
    <div class="col-md-12">
      <%= f.submit t("product.comment"), class: "btn btn-solid" %>
    </div>
  </div>
<% end %>
